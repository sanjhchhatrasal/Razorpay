<!DOCTYPE html>
<html>

<head>
  <title>Razorpay Integration</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
 <div class="h-screen w-full bg-zinc-200 flex items-center justify-center flex-col text-xl">
    <h1 class="font-semibold text-4xl text-sky-700">Razorpay Integration</h1>
    <p class="font-semibold text-2xl text-sky-500 mt-5">Welcome to Razorpay Integration</p>
  
    <button class="px-5 py-2 rounded-2xl bg-green-600 text-white font-semibold mt-5" id="rzp-button1">Pay with Razorpay</button>
 </div>

  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<script>
    document.getElementById('rzp-button1').onclick = function(e) {
      axios.post('/create/orderId')
        .then(function (response) {
          var options = {
            "key": "rzp_test_cAa3gCF0eP8i4R", // Enter the Key ID generated from the Dashboard
            "amount": response.data.amount, // Amount in currency subunits. Default currency is INR.
            "currency": response.data.currency,
            "name": "Sanjh pvt lmtd",
            "description": "Test Transaction",
            "image": "https://i.pinimg.com/236x/e9/36/ab/e936ab240156c33be7974c2c36188bdf.jpg",
            "order_id": response.data.id, 
            "handler": function(response) {
              axios.post('/api/payment/verify', {
                razorpayOrderId: response.razorpay_order_id,
                razorpayPaymentId: response.razorpay_payment_id,
                signature: response.razorpay_signature
              })
              .then(function (response) {
                alert('Payment verified successfully');
              })
              .catch(function (error) {
                console.error(error);
              });
            },
            "prefill": {
              "name": "Ayush",
              "email": "ayush@example.com",
              "contact": "9000090000"
            },
            "notes": {
              "address": "Razorpay Corporate Office"
            },
            "theme": {
              "color": "#3399cc"
            }
          };
          var rzp1 = new Razorpay(options);
          rzp1.on('payment.failed', function(response) {
            alert('Payment Failed');
            alert('Error Code: ' + response.error.code);
            alert('Description: ' + response.error.description);
            alert('Source: ' + response.error.source);
            alert('Step: ' + response.error.step);
            alert('Reason: ' + response.error.reason);
            alert('Order ID: ' + response.error.metadata.order_id);
            alert('Payment ID: ' + response.error.metadata.payment_id);
          });
          rzp1.open();
          e.preventDefault();
        })
        .catch(function (error) {
          console.error(error);
        });
    };
    </script>

</body>

</html>